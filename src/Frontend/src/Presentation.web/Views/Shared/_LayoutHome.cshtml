@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/css/BasicStyle/componentsStyle.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/ViewStyle/homeStyle.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/viewStyle/userSettingStyle.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/viewStyle/fileStyle.css" asp-append-version="true"/>
    </head>
    <body>
        <div class="sidebar">
            <div class="sidebar-head">
                <div class="user-img">
                    <img src="https://cdn.pixabay.com/photo/2017/07/18/23/23/user-2517433_1280.png" alt="" />
                </div>
                <div class="user-details">
                    <p class="user-membership">
                    @User.Claims.Where(u => u.Type == "Membership").Select(u => u.Value).SingleOrDefault()
                    </p>
                    <p class="user-name">
                        @User.Claims.Where(u => u.Type == ClaimTypes.Name).Select(u => u.Value).SingleOrDefault()
                    </p>
                </div>
            </div>

            <div class="sidebar-nav">
                <div class="sidebar-menu">
                    <p class="sidebar-title">Pinned Files</p>
                    <ul class="pinned-file">
                        <li>
                            <a>
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="24"
                                     height="24"
                                     viewBox="0 0 24 24"
                                     fill="none"
                                     stroke="currentColor"
                                     stroke-width="2"
                                     stroke-linecap="round"
                                     stroke-linejoin="round"
                                     class="icon icon-tabler icons-tabler-outline icon-tabler-file">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                    <path d="M14 3v4a1 1 0 0 0 1 1h4" />
                                    <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
                                </svg>
                                <span class="name">Archivos 1</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="sidebar-menu">
                <ul>
                    <li>
                        <a asp-controller="Folders" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 fill="none"
                                 stroke="currentColor"
                                 stroke-width="2"
                                 stroke-linecap="round"
                                 stroke-linejoin="round"
                                 class="icon icon-tabler icons-tabler-outline icon-tabler-folder">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M5 4h4l3 3h7a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-11a2 2 0 0 1 2 -2" />
                            </svg>
                            <span class="name">My folders</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="UserSettings" asp-action="Index">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="24"
                                 height="24"
                                 viewBox="0 0 24 24"
                                 fill="none"
                                 stroke="currentColor"
                                 stroke-width="2"
                                 stroke-linecap="round"
                                 stroke-linejoin="round"
                                 class="icon icon-tabler icons-tabler-outline icon-tabler-settings-2">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M19.875 6.27a2.225 2.225 0 0 1 1.125 1.948v7.284c0 .809 -.443 1.555 -1.158 1.948l-6.75 4.27a2.269 2.269 0 0 1 -2.184 0l-6.75 -4.27a2.225 2.225 0 0 1 -1.158 -1.948v-7.285c0 -.809 .443 -1.554 1.158 -1.947l6.75 -3.98a2.33 2.33 0 0 1 2.25 0l6.75 3.98h-.033z" />
                                <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                            </svg>
                            <span class="name">User Settings</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Home" asp-action="Logout">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="24"
                             height="24"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             class="icon icon-tabler icons-tabler-outline icon-tabler-logout-2">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                            <path d="M10 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2" />
                            <path d="M15 12h-12l3 -3" />
                            <path d="M6 15l-3 -3" />
                        </svg>
                            <span class="name">Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="content">
            <main role="main">
                @RenderBody()
            </main>
        </div>


        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

    </body>

</html>